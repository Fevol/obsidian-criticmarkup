{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "paths": {
      "src": ["src/*", "tests/*"]
    },
    "lib": [
      "dom",
      "ESNext"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "**/**.ts"
  ]
}
